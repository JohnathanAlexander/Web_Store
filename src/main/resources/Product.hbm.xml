<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.alexandersEmporium.onlineStore.domain.Product" table = "products">
      
      <meta attribute = "class-description">
         This class contains the employee detail. 
      </meta>
      
      <id name = "recordId" type = "int" column = "recordId">
         <generator class="native"/>
      </id>
      
      <property name = "productId" column = "productId" type = "string"/>
      <property name = "title" column = "productName" type = "string"/>
      <property name = "description" column = "productDescription" type = "string"/>
      <property name = "price" column = "price" type = "double"/>
      <property name = "cost" column = "cost" type = "double"/>
      <property name ="isActive" column = "isActive" type="string"/>
      <property name = "isFeatured" column = "isFeatured" type = "string"/>
      
   </class>
</hibernate-mapping>